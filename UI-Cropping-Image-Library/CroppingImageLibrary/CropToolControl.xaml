<UserControl
    x:Class="CroppingImageLibrary.CropToolControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid
        x:Name="RootGrid"
        Loaded="RootGrid_Loaded"
        MouseLeftButtonDown="RootGrid_OnMouseLeftButtonDown"
        MouseLeftButtonUp="RootGrid_MouseLeftButtonUp">
        <Border x:Name="BackgroundColor" Background="#CD323232">
            <Image x:Name="SourceImage" Stretch="Fill" />
        </Border>
    </Grid>
</UserControl>
